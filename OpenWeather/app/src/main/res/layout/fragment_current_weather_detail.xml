<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:stretchColumns="*"
    android:backgroundTint="@color/weather_detail"
    android:background="@drawable/weather_detail_background">
    <TableRow>
       <TextView
           android:id="@+id/tvWindDetailSpeed"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:layout_column="0"
           android:textSize="@dimen/weather_detail_text_size" />
        <TextView
            android:id="@+id/tvHumidityDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_column="1"
            android:textSize="@dimen/weather_detail_text_size" />
        <TextView
            android:id="@+id/tvClouds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_column="2"
            android:textSize="@dimen/weather_detail_text_size" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tvPressureDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_column="0"
            android:textSize="@dimen/weather_detail_text_size" />
        <TextView
            android:id="@+id/tvSunRise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_column="1"
            android:textSize="@dimen/weather_detail_text_size" />
        <TextView
            android:id="@+id/tvSunSet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_column="2"
            android:textSize="@dimen/weather_detail_text_size" />

    </TableRow>

</TableLayout>