<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/cardViewStyle"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgMovieImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgMovieImage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Movie Title" />

        <TextView
            android:id="@+id/tvMovieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvMovieTitle"
            android:layout_alignTop="@id/tvMovieTitle"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:text="2003" />

        <TextView
            android:id="@+id/tvOverView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvMovieReleaseDate"
            android:layout_alignTop="@id/tvMovieReleaseDate"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="OverView Text" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>